@model PointOfSalesSystem.Models.ViewModels.SalesViewModel

<h2>Process Sale</h2>

<form asp-action="ProcessSale" asp-controller="Sales" method="post">
    <div>
        <label>Select Customer:</label>
        <select asp-for="CustomerId" class="form-control">
            <option value="">-- Select Customer --</option>
            @foreach (var customer in Model.Customers)
            {
                <option value="@customer.CustomerId">@customer.Name</option>
            }
        </select>
    </div>

    <div>
        <label>Total Amount:</label>
        <input type="number" asp-for="TotalAmount" class="form-control" required />
    </div>

    <div>
        <label>Amount Received:</label>
        <input type="number" asp-for="AmountReceived" class="form-control" required />
    </div>

    <div>
        <label>Payment Method:</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option>Cash</option>
            <option>Card</option>
            <option>Phone Money</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Complete Sale</button>
</form>
