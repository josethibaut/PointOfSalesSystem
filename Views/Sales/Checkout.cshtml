@model PointOfSalesSystem.Models.ViewModels.SalesViewModel

<h2>Checkout</h2>
<p>Total: @Model.TotalAmount.ToString("C")</p>

<form asp-action="ProcessSale" asp-controller="Sales" method="post">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
    <input type="hidden" name="TotalAmount" value="@Model.TotalAmount" />

    <label>Redeem Loyalty Points:</label>
    <input type="number" name="pointsToRedeem" min="0" max="@Model.AvailablePoints" />

    <button type="submit">Complete Purchase</button>
</form>
