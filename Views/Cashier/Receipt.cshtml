@model PointOfSalesSystem.Models.Sale

<h2>Receipt</h2>

<p><strong>Sale ID:</strong> @Model.SaleId</p>
<p><strong>Date:</strong> @Model.SaleDate.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
<p><strong>VAT Amount:</strong> @Model.VATAmount.ToString("C")</p>
<p><strong>Amount Received:</strong> @Model.AmountReceived.ToString("C")</p>
<p><strong>Change Due:</strong> @Model.ChangeDue.ToString("C")</p>
<p><strong>Payment Method:</strong> @Model.PaymentMethod</p>

<h3>Items Purchased:</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SaleItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Cashier" asp-action="Index" class="btn btn-primary">Back to Cashier</a>
